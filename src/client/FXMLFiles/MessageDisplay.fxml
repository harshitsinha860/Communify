<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="MessageCover" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.MessageDisplayController">
    <children>
        <HBox fx:id="SenderDetailsBox">
            <children>
                <Label fx:id="SenderName" text="From" underline="true" />
            </children>
        </HBox>
        <Label fx:id="MessageContent" text="Message">
         <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding></Label>
        <HBox fx:id="DetailsBox">
            <children>
                <Label fx:id="TimeContent" text="Time" />
                <Button fx:id="ReadReceipts" text="Details">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
            </children>
        </HBox>
    </children>
</VBox>
